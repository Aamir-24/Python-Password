#:kivy 1.11.1

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 15

        Label:
            font_size: root.title_size
            text: root.title_text
            markup: True

        Button:
            font_size: root.btn_font
            size_hint_x: root.btn_width
            pos_hint: root.btn_pos 
            text: 'Settings'
            on_release: root.goto_settings()

        Button:
            font_size: root.btn_font
            size_hint_x: root.btn_width
            pos_hint: root.btn_pos
            text: 'Get password'
            on_release: root.goto_get_password()

        Button:
            font_size: root.btn_font
            size_hint_x: root.btn_width
            pos_hint: root.btn_pos
            text: 'Set password'
            on_release: root.goto_set_password()

        Button:
            font_size: root.btn_font
            size_hint_x: root.btn_width
            pos_hint: root.btn_pos
            text: 'Delete password'
            on_release: root.goto_del_password()

        Button:
            font_size: root.btn_font
            size_hint_x: root.btn_width
            pos_hint: root.btn_pos
            text: 'Info'
            on_release: root.goto_info()

        Button:
            font_size: root.btn_font
            size_hint_x: root.btn_width
            pos_hint: root.btn_pos
            text: 'Exit'
            on_release: root.exit_program()

        Label:
            size_hint_y: .1

<SettingsScreen>:
    on_leave: alpha.text = ''
    BoxLayout:
        spacing: 15
        orientation: 'vertical'

        Label:
            size_hint_y: .3

        BoxLayout:
            spacing: 30
            size_hint_y: .1

            Label:
                font_size: 18
                size_hint_x: .2
                text: 'Change alpha password'

            TextInput:
                id: alpha
                font_size: 18
                size_hint_x: .2
                padding_x: 10
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                password: True
                multiline: False

            Button:
                text: 'Submit'
                size_hint_x: .1
                on_release: root.submit()

            Label:
                size_hint_x: .001

        Label:
            size_hint_y: .3

        BoxLayout:
            size_hint_y: .1

            Label:
                size_hint_x: .1

            Button:
                size_hint_x: .5
                text: 'Back'
                on_release: root.back()

            Label:
                size_hint_x: .1

        Label:
            size_hint_y: .3

<GetPassword>:
    on_pre_enter: root.update_passwords()
    BoxLayout:
        orientation: 'vertical'
        spacing: 50

        Label:
            id: passwords_box
            font_size: 18
            text: 'Nothing to show.'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (.5, .1)
            pos_hint: {'center_x': .5}

            Button:
                size_hint_x: .25
                text: 'Back'
                on_release: root.back()

            Label:
                size_hint_x: .01

            Button:
                size_hint_x: .25
                text: 'Refresh'
                on_release: root.update_passwords()

            Label:
                size_hint_x: .01

            Button:
                size_hint_x: .25
                text: 'Get password'
                on_release: root.get_password()

        Label:
            size_hint_y: .001

<SetPassword>:
    on_pre_enter: root.update_passwords()
    BoxLayout:
        orientation: 'vertical'
        spacing: 50

        Label:
            id: passwords_count_label
            font_size: 30
            text: root.passwords_count

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (.5, .1)
            pos_hint: {'center_x': .5}

            Button:
                size_hint_x: .25
                text: 'Back'
                on_release: root.back()

            Label:
                size_hint_x: .01

            Button:
                size_hint_x: .25
                text: 'Refresh'
                on_release: root.update_passwords()

            Label:
                size_hint_x: .01

            Button:
                size_hint_x: .25
                text: 'Set password'
                on_release: root.set_password()

        Label:
            size_hint_y: .001


<DelPassword>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 50

        Button:
            size_hint_x: .5
            text: 'Back'
            on_release: root.back()

<InfoScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 50

        Label:
            font_size: 16
            font_name: 'RobotoMono-Regular'
            size_hint_x: 1
            size_hint_y: 1
            text: root.info_text

        Button:
            size_hint_x: .3
            size_hint_y: .1
            pos_hint: {'center_x': .5}
            text: 'Back'
            on_release: root.back()

        Label:
            font_size: 20
            size_hint_y: .2
            text: ' '
