<ContentNavigationDrawer>:
    orientation: 'vertical'
    padding: 20
    spacing: 15

    MDLabel:
        text: 'Python Password'
        font_style: 'Button'
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: 'v{0}'.format(app.info['version'])
        font_style: 'Caption'
        size_hint_y: None
        height: self.texture_size[1]

    MDSeparator:

    ScrollView:
        MDList:
            id: menu_list

            OneLineIconListItem:
                icon_color: 'black'
                text: 'Passwords'
                on_press: root.change_screen('passwords')
                IconLeftWidget:
                    icon: 'shield-lock-outline'

            OneLineIconListItem:
                text: 'Settings'
                on_press: root.change_screen('settings')
                IconLeftWidget:
                    icon: 'cogs'

            OneLineIconListItem:
                text: 'Info'
                on_press: root.change_screen('info')
                IconLeftWidget:
                    icon: 'information-outline'

Screen:
    MDToolbar:
        id: toolbar
        title: 'Python Password'
        pos_hint: {'top': 1}
        elevation: 10
        left_action_items: [['menu', lambda x: nav_drawer.set_state('open')]]

    NavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager

            Screen:
                name: 'passwords'
                on_enter:
                    app.update_passwords()

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 30
                    padding: (15, 0)

                    ScrollView:
                        size_hint: (.59, None)
                        height: root.height - toolbar.height
                        MDList:
                            id: passwords_list

                    BoxLayout:
                        size_hint: (.41, None)
                        height: root.height - toolbar.height
                        orientation: 'vertical'
                        spacing: 15
                        padding: 25

                        MDTextField:
                            id: password_alias
                            hint_text: 'Password alias'
                            helper_text: '3+ characters long.'
                            helper_text_mode: 'on_error'
                            mode: 'rectangle'
                            required: False
                            password: False
                            on_text_validate: app.validate_input(self, 3)

                        MDTextField:
                            id: password_value
                            hint_text: 'Password value'
                            helper_text: '6+ characters long.'
                            helper_text_mode: 'on_error'
                            mode: 'rectangle'
                            required: False
                            password: True
                            on_text_validate: app.validate_input(self, 6)

                        MDFillRoundFlatIconButton:
                            id: btn_add_password
                            size_hint_x: 1
                            text: 'Add password'
                            icon: 'key-plus'
                            on_press: app.add_password()

                        MDSeparator:

                        MDTextField:
                            id: del_password_alias
                            hint_text: 'Password alias'
                            helper_text: '3+ characters long.'
                            helper_text_mode: 'on_error'
                            mode: 'rectangle'
                            required: False
                            max_text_length: 16
                            password: False

                        MDFillRoundFlatIconButton:
                            id: btn_del_password
                            size_hint_x: 1
                            text: 'Remove password'
                            icon: 'key-minus'

                        MDSeparator:

                        MDLabel:
                            id: passwords_count
                            text: ''
                            halign: 'center'
                            valign: 'middle'

            Screen:
                name: 'settings'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1, None)
                    height: root.height - toolbar.height
                    padding: (15, self.height / 6 - 30)

                    MDSeparator:

                    BoxLayout:

                        MDLabel:
                            text: 'Change alpha password'
                            halign: 'center'

                        BoxLayout:
                            orientation: 'vertical'
                            padding: (0, self.height / 2 - 50)

                            MDTextField:
                                id: alpha_change
                                hint_text: 'New alpha password'
                                helper_text: '6+ characters long.'
                                helper_text_mode: 'on_error'
                                mode: 'rectangle'
                                required: False
                                password: True
                                size_hint_x: .7
                                on_text_validate: app.change_alpha()

                            BoxLayout:
                                orientation: 'horizontal'
                                spacing: 15

                                MDFillRoundFlatIconButton:
                                    id: btn_alpha_change
                                    text: 'Save'
                                    icon: 'checkbox-marked-outline'
                                    on_release: app.change_alpha()

                                MDFillRoundFlatIconButton:
                                    id: btn_alpha_reset
                                    text: 'Reset'
                                    icon: 'lock-reset'
                                    on_release: app.reset_alpha()

                    MDSeparator:

                    BoxLayout:

                        MDLabel:
                            text: 'Change beta password'
                            halign: 'center'

                        BoxLayout:
                            orientation: 'vertical'
                            padding: (0, self.height / 2 - 50)

                            MDTextField:
                                id: beta_change
                                hint_text: 'New beta password'
                                helper_text: '6+ characters long.'
                                helper_text_mode: 'on_error'
                                mode: 'rectangle'
                                required: False
                                password: True
                                size_hint_x: .7

                            BoxLayout:
                                orientation: 'horizontal'
                                spacing: 15

                                MDFillRoundFlatIconButton:
                                    text: 'Save'
                                    icon: 'checkbox-marked-outline'
                                    on_release: app.change_beta()

                                MDFillRoundFlatIconButton:
                                    text: 'Reset'
                                    icon: 'lock-reset'
                                    on_release: app.reset_beta()

                    MDSeparator:

                    BoxLayout:
                        padding: (0, (self.height - self.children[1].height) / 2)
                        spacing: 15

                        Widget:

                        MDFillRoundFlatIconButton:
                            text: 'Make backup'
                            icon: 'database-export'
                            on_release: app.backup_export()

                        MDFillRoundFlatIconButton:
                            text: 'Import backup'
                            icon: 'database-import'
                            on_release: app.backup_import()

                        Widget:

                    MDSeparator:

            Screen:
                name: 'info'

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (1, None)
                    height: root.height - toolbar.height
                    padding: (60, 25, 60, 0)
                    spacing: 100

                    BoxLayout:
                        orientation: 'vertical'

                        MDLabel:
                            text: 'About the program'
                            size_hint: (1, None)
                            height: '30dp'
                            valign: 'middle'

                        ScrollView:
                            MDList:

                                TwoLineListItem:
                                    text: app.info['name']
                                    secondary_text: 'Name'
                                    on_release: app.detailed_info('name')

                                TwoLineListItem:
                                    text: app.info['version']
                                    secondary_text: 'Version'
                                    on_release: app.detailed_info('version')

                                TwoLineListItem:
                                    text: app.info['author']
                                    secondary_text: 'Author'
                                    on_release: app.detailed_info('author')

                                TwoLineListItem:
                                    text: app.info['icon']
                                    secondary_text: 'Program icon'
                                    on_release: app.detailed_info('icon')

                                TwoLineListItem:
                                    text: app.info['rd_party']
                                    secondary_text: '3rd party software'
                                    on_release: app.detailed_info('rd_party')

                    BoxLayout:
                        orientation: 'vertical'

                        MDLabel:
                            text: 'Useful links'
                            size_hint: (1, None)
                            height: '30dp'

                        ScrollView:

                            MDList:

                                TwoLineAvatarListItem:
                                    text: 'GitHub repository'
                                    secondary_text: ' '
                                    on_release: app.open_url(app.info['github'])

                                    IconLeftWidget:
                                        icon: 'github-circle'

                                TwoLineAvatarListItem:
                                    text: 'FAQ'
                                    secondary_text: ' '
                                    on_release: app.open_url(app.info['faq'])

                                    IconLeftWidget:
                                        icon: 'comment-question-outline'

                                TwoLineAvatarIconListItem:
                                    text: 'Mail'
                                    secondary_text: ' '
                                    on_release: app.open_url(app.info['mail'])

                                    IconLeftWidget:
                                        icon: 'email-outline'

        MDNavigationDrawer:
            md_bg_color: app.theme_cls.bg_dark
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer

